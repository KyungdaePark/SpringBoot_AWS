<!-- header & footer.mustache 이용 -->
{{>layout/header}} <!-- > 는 현재 파일을 기준으로 다른 파일을 가져오는 문법임 -->

<h1> 스프링 부트로 시작하는 웹 서비스 Ver .2</h1>
<div class = "col-md-12">
    <div class = "row">
        <div class = "col-md-6">
            <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
            <!-- 버튼을 생성하고 /posts/save로 이동함 -->
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-borded">
        <thead class="thead-strong">
        <tr>
            <th>게시글번호</th>
            <th>제목</th>
            <th>작성자</th>
            <th>최종수정일</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}} <!-- java의 for문과 같음, posts라는 List를 순회함-->
            <tr>
                <td>{{id}}</a></td> <!-- List에서 뽑아낸 객체의 필드를 사용함.-->
                <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                <td>{{author}}</td>
                <td>{{modifiedDate}}</td>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

{{>layout/footer}}
